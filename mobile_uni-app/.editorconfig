root = false

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = false
trim_trailing_whitespace = false

[*.{js,jsx,ts,tsx,vue}]
indent_style = space
indent_size = 2
end_of_line = CRLF
trim_trailing_whitespace = false
insert_final_newline = false
max_line_length = 100
